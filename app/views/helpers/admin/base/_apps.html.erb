<ul>

  <%
    if !params[:application] && params[:controller].include?('dashboard')
      dashboard = 'active'
    end
  %>

  <li class="dashboard"><%= link_to Typus::I18n.t("Dashboard"), admin_dashboard_path, :class => dashboard %></li>

  <% admin_user.applications.each do |application| %>

    <%
      apps = admin_user.application(application)
      if (params[:application] == application) || (@resource && apps.include?(@resource.model_name))
        klass = 'active'
      end
    %>

    <li><%= link_to Typus::I18n.t(application), admin_dashboard_path(:application => application), { :class => klass } %></li>

  <% end %>

</ul>
